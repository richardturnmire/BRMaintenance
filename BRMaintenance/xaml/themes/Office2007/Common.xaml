	<DataTemplate x:Key="Office2007GroupHeaderTemplate">
		<Border Name="headerBorder"
			Background="{DynamicResource C1DataGrid_GroupHeader_Brush}"
			BorderThickness="{DynamicResource C1DataGrid_GroupHeaderBorder_Thickness}"
			BorderBrush="{DynamicResource C1DataGrid_GroupHeaderBorder_Brush}"
			CornerRadius="{DynamicResource C1DataGrid_GroupHeaderBorder_CornerRadius}"
			TextElement.Foreground="{DynamicResource C1DataGrid_GroupHeaderText_Brush}"
			Padding="5, 2,5,2" >
				<TextBlock Text="{Binding Name}" VerticalAlignment="Center"/>
		</Border>
		<DataTemplate.Triggers>
			<Trigger SourceName="headerBorder" Property="IsMouseOver"
									Value="true">
				<Setter TargetName="headerBorder" Property="Background"
										Value="{DynamicResource C1DataGrid_GroupHeader_HoverBrush}"/>
				<Setter TargetName="headerBorder" Property="BorderBrush"
										Value="{DynamicResource C1DataGrid_GroupHeaderBorder_HoverBrush}"/>
				<Setter TargetName="headerBorder" 
									    Property="TextElement.Foreground"
										Value="{DynamicResource C1DataGrid_GroupHeaderText_HoverBrush}"/>
			</Trigger>
		</DataTemplate.Triggers>
	</DataTemplate>

	<GroupStyle  x:Key="{ComponentResourceKey TypeInTargetAssembly={x:Type local:C1DataGrid},
			ResourceId=Office2007VerticalGroupStyle0}" 
			HeaderTemplate="{StaticResource Office2007GroupHeaderTemplate}">
		<GroupStyle.Panel>
			<ItemsPanelTemplate>
			<!-- pf1 -->
				<local:C1VirtualizingStackPanel />
				<!--
				<VirtualizingStackPanel/>
				-->
			</ItemsPanelTemplate>
		</GroupStyle.Panel>

		<GroupStyle.ContainerStyle>
			<Style TargetType="{x:Type GroupItem}" >
				<Setter Property="Template">
					<Setter.Value>
						<ControlTemplate TargetType="{x:Type GroupItem}">
							<Expander IsExpanded="true"  >
								<Expander.Header>
									<ContentPresenter/>
								</Expander.Header>
								<Grid Name="childItemsGrid"	 Margin="10,0,0,0">
									<Grid.RowDefinitions>
										<RowDefinition Height="Auto"/>
										<RowDefinition />
									</Grid.RowDefinitions>
									<Border Name="horzGridLine" 
										Height="{DynamicResource C1DataGrid_GridLineHorizontal_Thickness}"
										Background="{DynamicResource C1DataGrid_GridLineHorizontal_Brush}"
										HorizontalAlignment="Stretch"/>
									<local:GridItemsPanelPresenter Name="itemsPresenter"
										Grid.Row="1"/>
								</Grid>
							</Expander>
							<ControlTemplate.Triggers>
								<Trigger SourceName="itemsPresenter" 
									Property="RepresentsGroupItems" Value="true">
									<Setter TargetName="horzGridLine" 
										Property="Height" Value="0"/>
								</Trigger>
							</ControlTemplate.Triggers>
						</ControlTemplate>
					</Setter.Value>
				</Setter>
			</Style>
		</GroupStyle.ContainerStyle>
	</GroupStyle >

	<local:GroupStyleCollection x:Key="Office2007VerticalGroupStyles">
