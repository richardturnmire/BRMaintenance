	<!-- (C1Datarid.HeaderCellTemplate property) -->
	<ControlTemplate x:Key="Office2007HeaderCellTemplate" TargetType="local:CaptionCellPresenterBase">
		<Grid Name="grid">
			<Grid.ColumnDefinitions>
				<ColumnDefinition/>
				<ColumnDefinition Width="Auto"/>
			</Grid.ColumnDefinitions>
			<Grid.RowDefinitions>
				<RowDefinition/>
				<RowDefinition Height="Auto"/>
			</Grid.RowDefinitions>
			<Border Name="brd"  
				BorderThickness="{DynamicResource C1DataGrid_ColumnHeaderBorder_Thickness}" 
				BorderBrush="{DynamicResource C1DataGrid_ColumnHeaderBorder_Brush}"  
				Background="{DynamicResource C1DataGrid_ColumnHeader_Brush}"
				CornerRadius="{DynamicResource C1DataGrid_ColumnHeaderBorder_CornerRadius}"
				TextElement.Foreground="{DynamicResource C1DataGrid_ColumnHeaderText_Brush}">
				<local:HeaderCellContentPresenter/>
			</Border>
			<Border Grid.Column="1" Grid.RowSpan="2"  
				Width="{DynamicResource C1DataGrid_GridLineVertical_Thickness}" 
				Background="{DynamicResource C1DataGrid_GridLineVertical_Brush}"
				VerticalAlignment="Stretch"/>
			<Border Grid.ColumnSpan="2" Grid.Row="1"  
				Height="{DynamicResource C1DataGrid_GridLineHorizontal_Thickness}" 
				Background="{DynamicResource C1DataGrid_GridLineHorizontal_Brush}"
				HorizontalAlignment="Stretch"/>
			<local:ColumnResizer Grid.ColumnSpan="2" Grid.RowSpan="2"
				HorizontalAlignment="Right" Width="5" 
                           ResizingDirection="Horizontal"/>
			<local:ColumnResizer Grid.RowSpan="2" Grid.ColumnSpan="2"
				VerticalAlignment="Bottom"  
				Height="5" ResizingDirection="Vertical" />
		</Grid>
		<ControlTemplate.Triggers>
			<MultiDataTrigger>
				<MultiDataTrigger.Conditions>
					<Condition Binding="{Binding Column.IsSelected}" Value="false"/>
					<Condition Binding="{Binding Path=IsMouseOver, ElementName=grid}" 
						Value="true"/>
				</MultiDataTrigger.Conditions>
				<Setter TargetName="brd" Property="Background" 
					Value="{DynamicResource C1DataGrid_ColumnHeader_HoverBrush}"/>
				<Setter TargetName="brd" Property="BorderBrush" 
					Value="{DynamicResource C1DataGrid_ColumnHeaderBorder_HoverBrush}"/>
				<Setter TargetName="brd" Property="TextElement.Foreground" 
					Value="{DynamicResource C1DataGrid_ColumnHeaderText_HoverBrush}"/>
			</MultiDataTrigger>

			<MultiDataTrigger>
				<MultiDataTrigger.Conditions>
					<Condition Binding="{Binding Column.IsSelected}" Value="true"/>
					<Condition Binding="{Binding Path=IsMouseOver, ElementName=grid}" 
						Value="true"/>
				</MultiDataTrigger.Conditions>
				<Setter TargetName="brd" Property="Background" 
					Value="{DynamicResource C1DataGrid_ColumnHeader_SelectedHoverBrush}"/>
				<Setter TargetName="brd" Property="BorderBrush" 
					Value="{DynamicResource C1DataGrid_ColumnHeaderBorder_SelectedHoverBrush}"/>
				<Setter TargetName="brd" Property="TextElement.Foreground" 
					Value="{DynamicResource C1DataGrid_ColumnHeaderText_SelectedHoverBrush}"/>
			</MultiDataTrigger>

			<MultiDataTrigger>
				<MultiDataTrigger.Conditions>
					<Condition Binding="{Binding Column.IsSelected}" Value="true"/>
					<Condition Binding="{Binding Path=IsMouseOver, ElementName=grid}" 
						Value="false"/>
				</MultiDataTrigger.Conditions>
				<Setter TargetName="brd" Property="Background" 
					Value="{DynamicResource C1DataGrid_ColumnHeader_SelectedBrush}"/>
				<Setter TargetName="brd" Property="BorderBrush" 
					Value="{DynamicResource C1DataGrid_ColumnHeaderBorder_SelectedBrush}"/>
				<Setter TargetName="brd" Property="TextElement.Foreground" 
					Value="{DynamicResource C1DataGrid_ColumnHeaderText_SelectedBrush}"/>
			</MultiDataTrigger>

		</ControlTemplate.Triggers>
	</ControlTemplate>

