								</Grid>
							</Expander>
							<ControlTemplate.Triggers>
								<Trigger SourceName="itemsPresenter" 
									Property="RepresentsGroupItems" Value="true">
										<Setter TargetName="vertGridLine" Property="Width"	
											Value="0"/>
								</Trigger>
							</ControlTemplate.Triggers>
						</ControlTemplate>
					</Setter.Value>
				</Setter>
			</Style>
		</GroupStyle.ContainerStyle>

