							<Expander IsExpanded="true" Margin="0,5,0,0"
								HorizontalAlignment="Stretch">
								<Expander.Header>
									<ContentPresenter/>
								</Expander.Header>
								<Grid  Name="childItemsGrid" Margin="20, 3, 0,0">
									<Grid.ColumnDefinitions>
										<ColumnDefinition Width="Auto"/>
										<ColumnDefinition/>
									</Grid.ColumnDefinitions>
									<Border Name="vertGridLine"  
